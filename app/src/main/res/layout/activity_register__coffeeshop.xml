<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Daftar Coffee Shop"
            android:textColor="@color/darkbrown"
            android:textSize="40dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />

        <EditText
            android:id="@+id/edtnama_coffeeshop"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:elevation="5dp"
            android:hint="Nama Coffeeshop"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColor="@color/darkbrown" />

        <EditText
            android:id="@+id/edtalamat"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:elevation="5dp"
            android:hint="Alamat"
            android:inputType="textAutoComplete"
            android:paddingLeft="15dp"
            android:textColor="@color/darkbrown" />

        <EditText
            android:id="@+id/edtno_telpon"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:elevation="5dp"
            android:hint="No Handphone / Telepon"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/darkbrown" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:elevation="5dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="@color/darkbrown" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:elevation="5dp"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/darkbrown" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_baru"
            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sudah"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Sudah Punya Akun? Masuk Disini"
            android:textColor="@color/darkbrown"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>